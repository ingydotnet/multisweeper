<div id="main">
  <form id="joinForm">
    <input type="text" id="name" name="name" placeholder="What is your name, human?" />
    <input type="button" id="joinGame" value="Join Game" />
  </form>

</div>
<div class="social hidden">
<span class="messages">Messages</span>
<div id="log">
</div>
